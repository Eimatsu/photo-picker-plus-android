<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    style="@style/relativeLayoutAssetFragment"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/gcImageViewListThumb"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop" >
    </ImageView>

    <ImageView
        android:id="@+id/gcImageViewListTick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/gcImageViewListThumb"
        android:layout_alignTop="@+id/gcImageViewListThumb"
        android:background="@drawable/tick"
        android:visibility="gone" >
    </ImageView>

    <ImageView
        android:id="@+id/gcImageViewListVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gcImageViewListThumb"
        android:layout_alignTop="@+id/gcImageViewListThumb"
        android:background="@drawable/video_icon"
        android:visibility="gone" >
    </ImageView>

    <TextView
        android:id="@+id/gcTextViewListAlbumTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/gcImageViewListThumb" />

</RelativeLayout>